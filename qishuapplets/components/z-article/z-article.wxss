/* components/w-article/w-article.wxss */
@import '/style/iconfont.wxss';
.card {
  display: flex;
  flex-direction: column;
  min-width: 0;
  word-wrap: break-word;
  background-color: #fff;
  background-clip: border-box;
  border: 1px solid rgba(0, 0, 0, 0.125);
  border-radius: 0.55rem;
  margin: 5px 5px;
}
.card-body {
  flex: 1 1 auto;
  min-height: 1px;
  padding: 1.25rem;
}
.card-title {
  font-size: 0.75rem;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 25px;
  max-height: 50px;
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  box-sizing: content-box;
  white-space: normal;
  margin-bottom: 10px;
}
.card .intro {
  font-size: 0.55rem;
  display: -webkit-box;/*设置为弹性盒子*/
  -webkit-line-clamp: 2; /*最多显示5行*/
  -webkit-box-orient: vertical;
  overflow: hidden;/*超出隐藏*/
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;/*超出显示为省略号*/
  -webkit-box-orient: vertical;
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  word-break: break-all;/*强制英文单词自动换行*/
  line-height: 1.5;
  color: #999;
  box-sizing: content-box;
  white-space: normal;
}
.card .card-foolter {
  margin-top: 8px;
  line-height: 22px;
  font-size: 12px;
  color: #b1b1b1;
} 
.card .card-foolter .dates {
  float: left;
} 
.card .card-foolter .see {
  float: right;
} 